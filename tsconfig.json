{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",
		"esModuleInterop": true,
		"sourceMap": true
	},
	"exclude": ["node_modules", "dist", ".git", "data", "profiles", "scripts"]
}
